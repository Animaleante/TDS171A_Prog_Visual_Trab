@model TDS171A_Prog_Visual_Trab.Models.Venda

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alterando os dados de uma VENDA";
}

<h1 class="my-4">Registro de uma NOVA VENDA</h1>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12 mb-12">
            <div class="control-group form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="controls">
                    @Html.Label("Nome do comprador")
                    @Html.EditorFor(model => model.NomeComprador, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeComprador, "Nome do comprador não pode ser vazio!", new { @class = "text-danger" })
                    <p class="help-block"></p>
                </div>

                <div class="controls">
                    @Html.Label("CPF do comprador")
                    @Html.EditorFor(model => model.CpfComprador, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CpfComprador, "CPF do comprador não pode ser vazio!", new { @class = "text-danger" })
                    <p class="help-block"></p>
                </div>

                <div class="controls">
                    @Html.Label("Telefone")
                    @Html.EditorFor(model => model.TelefoneComprador, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TelefoneComprador, "Telefone do comprador não pode ser vazio!", new { @class = "text-danger" })
                    <p class="help-block"></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-12 mb-12">
            <input type="submit" value="Adicionar Venda" class="btn btn-primary" />
            @Html.ActionLink("Retornar para a listagem de Vendas", "Index", null, new { @class = "btn" })
        </div>
    </div>
}

@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liVendas').addClass("active");
        });
    </script>
}
