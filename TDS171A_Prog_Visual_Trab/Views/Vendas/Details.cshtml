@model TDS171A_Prog_Visual_Trab.Models.Venda

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alterando os dados de uma VENDA";
}

<h1 class="my-4">Visualizando detalhes de uma VENDA</h1>

<div class="row">
    <div class="col-lg-12 mb-12">
        <div class="form-group">
            <div class="form-group">
                @Html.LabelFor(model => model.NumeroNota)
                <br />
                <div class="form-control">
                    @Html.DisplayFor(model => model.NumeroNota)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Data)
                <br />
                <div class="form-control">
                    @Html.DisplayFor(model => model.Data)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NomeComprador)
                <br />
                <div class="form-control">
                    @Html.DisplayFor(model => model.NomeComprador)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CpfComprador)
                <br />
                <div class="form-control">
                    @Html.DisplayFor(model => model.CpfComprador)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TelefoneComprador)
                <br />
                <div class="form-control">
                    @Html.DisplayFor(model => model.TelefoneComprador)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Total)
                <br />
                <div class="form-control">
                    @Html.DisplayFor(model => model.Total)
                </div>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nome Produto</th>
                    <th>Quantidade</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.VendaItems) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Produto.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-12 mb-12">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.VendaId }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Retornar para a listagem", "Index")
    </div>
</div>

@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liVendas').addClass("active");

            $('.table').dataTable({
                "order": [[1, "asc"]]
            });
        });
    </script>
}