@model TDS171A_Prog_Visual_Trab.Models.VendaItem

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes do PRODUTO a ser removido ";
}

<h1 class="my-4">Dados do ITEM a ser removido</h1>

<div class="row">
    <div class="col-lg-12 mb-12">
        <div class="form-group">
            @Html.LabelFor(model => model.Produto.Nome)
            <br />
            <div class="form-control">
                @Html.DisplayFor(model => model.Produto.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Venda.NomeComprador)
            <br />
            <div class="form-control">
                @Html.DisplayFor(model => model.Venda.NomeComprador)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.VendaItemId)
            <br />
            <div class="form-control">
                @Html.DisplayFor(model => model.VendaItemId)
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-12 mb-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Remover ITEM" class="btn btn-primary" />
            @Html.ActionLink("Voltar para lista", "Details", "Vendas", new { id = @ViewBag.VendaId }, null)
        }
    </div>
</div>