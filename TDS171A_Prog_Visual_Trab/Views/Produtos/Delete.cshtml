@model TDS171A_Prog_Visual_Trab.Models.Produto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes do PRODUTO a ser removido ";
}

<h1 class="my-4">Dados do PRODUTO a ser removido</h1>

<div class="row">
    <div class="col-lg-12 mb-12">
        <div class="form-group">
            @Html.DisplayNameFor(model => model.Nome)
            <br />
            <div class="form-control">
                @Html.DisplayFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(model => model.Categoria.Nome)
            <br />
            <div class="form-control">
                @Html.DisplayFor(model => model.Categoria.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(model => model.Fabricante.Nome)
            <br />
            <div class="form-control">
                @Html.DisplayFor(model => model.Fabricante.Nome)
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-12 mb-12">
        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#deleteConfirmationModal">Remover</a>
        @Html.ActionLink("Retornar para a listagem", "Index")
    </div>
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1"
     role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirmação de exclusão de PRODUTO</h4>
                <button type="button" class="close" data-ELTEismiss="modal" aria-hidden="true">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Você está prestes a remover o produto @Model.Nome.ToUpper() do cadastro.
                </p>
                <p>
                    <strong>
                        Você está certo que deseja prosseguir?
                    </strong>
                </p>
                @using (Html.BeginForm("Delete", "Produtos", FormMethod.Post, new { @id = "delete-form", role = "form" })) {
                    @Html.HiddenFor(m => m.ProdutoId)
                    @Html.AntiForgeryToken()
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger"
                        onclick="$('#delete-form').submit();">
                    Sim, exclua este produto.
                </button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    Não, não exclua este produto.
                </button>
            </div>
        </div>
    </div>
</div>

@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProdutos').addClass("active");
        });
    </script>
}