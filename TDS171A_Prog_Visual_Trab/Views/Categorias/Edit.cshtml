@model TDS171A_Prog_Visual_Trab.Models.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alterando os dados de uma CATEGORIA";
}

<h1 class="my-4">Alteração dos dados de uma CATEGORIA</h1>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12 mb-12">
            <div class="control-group form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CategoriaId)

                <div class="controls">
                    @Html.LabelFor(model => model.Nome)
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "Nome da categoria não pode ser vazio!", new { @class = "text-danger" })
                    <p class="help-block"></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-12 mb-12">
            <input type="submit" value="Gravar alterações" class="btn btn-primary" />
            @Html.ActionLink("Retornar para a listagem de Categorias", "Index", null, new { @class = "btn" })
        </div>
    </div>
}

@section ScriptPage {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("li").removeClass('active');
            $("#liCategorias").addClass('active');
        });
    </script>
}