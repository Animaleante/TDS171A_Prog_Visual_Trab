@model TDS171A_Prog_Visual_Trab.Models.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de uma CATEGORIA";
}

<h1 class="my-4">Dados da CATEGORIA a ser removida</h1>

<div class="row">
    <div class="col-lg-12 mb-12">
        Deseja mesmo remover a categoria @Html.DisplayFor(model => model.Nome)?
        <p class="help-block"></p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-12 mb-12">
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            <input type="submit" value="Remover CATEGORIA" class="btn btn-primary" />
            @Html.ActionLink("Retornar para a listagem", "Index")
        }
    </div>
</div>

@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $("li").removeClass('active');
            $("#liCategorias").addClass('active');
        });
    </script>
}
